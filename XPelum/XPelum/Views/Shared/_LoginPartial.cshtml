@using Microsoft.AspNetCore.Identity
@inject SignInManager<Cliente> SignInManager
@inject UserManager<Cliente> UserManager

    <ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Ola @User.Identity.Name!</a>
            </li>
            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    @*<button type="submit" class="nav-link btn btn-link text-dark">Logout</button>*@
                    <button type="submit" class="nav-link btn btn-link text-light" >Sair</button>
                </form>
            </li>
        }
        else
        {
            <li class="">
                <a class="btn btn-warning" asp-area="Identity" asp-page="/Account/Register">Abra sua conta</a>
            </li>
            <li class="nav-item mt-2">
                <a class="ml-2" asp-area="Identity" asp-page="/Account/Login">Acesse sua conta</a>
            </li>
        }
    </ul>